<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:gravity="center"
    android:layout_gravity="center"
    tools:context="com.k4ench.scanme.MessageActivity1"
    tools:showIn="@layout/activity_message1">

    <TextView android:id="@+id/lblHowHappy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_100sdp"
        android:text="How happy are you with Housing?"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_12sdp"
        android:gravity="center"/>

    <android.support.v7.widget.AppCompatRatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_5sdp"
        android:rating="0"
        android:stepSize="1"
        android:numStars="5"
        style="?android:attr/ratingBarStyleIndicator"
        android:isIndicator="false"
        android:theme="@style/RatingBar"
        />

    <LinearLayout android:id="@+id/layoutForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible"
        tools:visibility="visible">

        <TextView android:id="@+id/lblWeHearFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:text="Yayy! We'd love to hear more"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12sdp"
            android:gravity="center"
            />

        <EditText android:id="@+id/txtComments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:lines="6"
            android:background="@drawable/text_shape_drawable"
            android:hint="Your Comments..."
            android:textSize="@dimen/_12sdp"
            android:gravity="top|left"
            android:padding="@dimen/_10sdp"
            android:textColorHint="@color/starNormalColor"
            />

        <Button android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:theme="@style/MyButton"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            />

        <TextView android:id="@+id/lblThanksFeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Woah! Thank you for your feedback!"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12sdp"
            android:gravity="center"
            android:visibility="invisible"
            tools:visibility="visible"
            />

    </LinearLayout>

</LinearLayout>
