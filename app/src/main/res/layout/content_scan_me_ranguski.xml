<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_scan_me_ranguski"
    android:background="@drawable/bl2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.k4ench.scanme.ScanMeRanguski"
    tools:showIn="@layout/activity_scan_me_ranguski">


    <com.androidessence.pinchzoomtextview.PinchZoomTextView
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="#fff"
        android:id="@+id/scanedme_timed"
        android:maxLength="100"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:text="Result is :"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#fff"
        android:layout_above="@+id/scanedme_timed"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp" />
</RelativeLayout>
